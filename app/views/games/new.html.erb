<div>
  <h1 class="text-center mb-3">New Game</h1>
  <div class="d-flex justify-content-center">
      <% @letters.each do |letter| %>
        <div class="letter-box">
          <p class="letter"><strong><%= letter %></strong></p>
        </div>
      <% end %>
  </div>

  <div class="mb-3 mt-5">
    <p class="text-center"><%= @result %></p>
    <div class="d-flex justify-content-center">
      <p class="text-center mt-4">Your score is :</p>
      <div class="letter-box">
        <p class="letter"><strong><%= session[:score] %></strong></p>
      </div>
    </div>
  </div>

  <div class="card m-5 p-3">
    <form action="/score" method="post" data-turbo="false">
      <div class="mb-3">
        <p class="text-center">What is the longest word you can find ?</p>
        <input type="text" name="word" class="form-control" id="question" aria-describedby="questionHelp">
        <input type="hidden" name="grid"value="<%= @letters %>" class="">
      </div>
      <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary">Play</button>
      </div>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    </form>
  </div>

  <div class="text-center m-5">
    <%= link_to 'new game', new_path %>
  </div>
</div>
